<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <project-name>xanadu</project-name>
    <home-page-url>https://qa-mooc-std-dev.int.bbpd.io/</home-page-url>
    <runLocation>local</runLocation>

    <!--Feel free to remove this if you aren't using api integration.-->
    <api-information>
        <scheme>https</scheme>
        <host-name>my_cool_api</host-name>
    </api-information>

    <allure>
        <screenshot-only-on-failure>true</screenshot-only-on-failure>
        <page-source-only-on-failure>true</page-source-only-on-failure>
    </allure>

    <!--If runLocation is local only need to specify browser name.-->
    <browsers>
        <!--<browser>-->
            <!--<name>safari</name>-->
            <!--<version>10</version>-->
            <!--<os>OS X</os>-->
            <!--<os-version>El Capitan</os-version>-->
        <!--</browser>-->
        <browser>
            <name>chrome</name>
        </browser>
        <browser>
            <name>firefox</name>
        </browser>
    </browsers>

    <sauce>
        <username>anonymous</username>
        <authentication-id>unknown</authentication-id>
        <record-video>true</record-video>
        <video-upload-on-pass>true</video-upload-on-pass>
        <record-screenshots>true</record-screenshots>
        <capture-html>true</capture-html>
    </sauce>

</configuration>